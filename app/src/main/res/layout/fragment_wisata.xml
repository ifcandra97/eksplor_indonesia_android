<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WisataFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/judul_atas"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wisata"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"

                >

                <ImageView
                    android:id="@+id/iv_add_wisata"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/add_icon"
                    android:layout_marginHorizontal="10dp"
                    />

                <ImageView
                    android:id="@+id/iv_scan_wisata"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/scan_icon"
                    />

            </LinearLayout>
        </RelativeLayout>

        <EditText
            android:id="@+id/et_search_wisata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search Wisata"
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:background="@drawable/background_search"
            android:padding="12dp"
            android:drawableStart="@drawable/search_icon"
            android:drawablePadding="10dp"
            />

        <TextView
            android:id="@+id/tv_hasilscan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:fontFamily="@font/quicksand_bold"
            android:layout_marginStart="10dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_wisata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            tools:listitem="@layout/list_wisata"
            />

    </LinearLayout>
</FrameLayout>